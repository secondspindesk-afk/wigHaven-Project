# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wighaven_db?schema=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Webhook.site Token (For local polling dev only - Optional)
# Get your token from https://webhook.site/ by creating a unique URL
# Extract the UUID from the URL: https://webhook.site/YOUR-TOKEN-HERE
WEBHOOK_SITE_TOKEN=your-webhook-site-token-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Paystack Configuration (Nigeria)
# Get your keys from https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# Email Configuration (SendGrid or Nodemailer)
EMAIL_FROM=noreply@wighaven.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Super Admin Access (Hidden - For Developer Only)
SUPER_ADMIN_EMAIL=youremail@example.com
SUPER_ADMIN_SECRET=super-secret-token-change-this

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Path (for local Redis server)
REDIS_SERVER_PATH=./redis/redis-server.exe
